<robot name="turtle" xmlns:xacro="http://www.ros.org/wiki/xacro">

<link name="base_link">
    <visual>
        <geometry>
            <box size="0.3 0.3 0.3" />
        </geometry>
        <material name="red_mat">
            <color rgba="1 0 0 1"/>
        </material>
    </visual>
</link>

<link name="fixed_cylinder">
    <visual>
        <geometry>
            <cylinder radius="0.03" length="0.5"/>
        </geometry>
        <material name="blue_mat">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>
</link>


<link name="platform">
    <visual>
        <geometry>
            <cylinder radius = "0.3" length="0.1"/>
        </geometry>
        <material name="green_mat">
            <color rgba="0 1 0 1"/>
        </material>
    </visual>
</link>


<link name="stem">
    <visual>
        <geometry>
            <cylinder radius = "0.05" length="0.15"/>
        </geometry>
        <material name="white">
            <color rgba="1 1 0 1"/>
        </material>
    </visual>
</link>

<link name="wheel">
    <origin xyz="0 0 0" rpy="1.57 0 0"/>
    <visual>
        <geometry>
            <cylinder radius="0.15" length="0.2"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>
</link>


<joint name="base_cylinder" type="fixed">
    <origin xyz="0 0 0.45" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="fixed_cylinder" />
    <axis xyz="0 0 1"/>
</joint>

<joint name="base_platform" type="continuous">
    <origin xyz="0 0 0.7" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="platform"/>
    <axis xyz = "0 1 0"/>
    <!-- <limit lower="0.0" upper="0.0" effort="100" velocity="100"/> -->
</joint>

<joint name="base_stem" type="continuous">
    <origin xyz="0 0 -0.2" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="stem"/>
    <axis xyz= "0 0 1"/>
</joint>

<joint name="stem_wheel" type="continuous">
    <origin xyz="0 0 -0.15" rpy="1.57 0 0"/>
    <parent link="stem"/>
    <child link="wheel"/>
    <axis xyz="0 0 1"/>
</joint>

</robot>